# Variables de Entorno - Backend TécnicoYa

# MongoDB Atlas
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.xxxxx.mongodb.net/tecnicoya?retryWrites=true&w=majority

# JWT - Clave secreta para tokens
JWT_SECRETO=tu_clave_secreta_super_segura_aqui

# Cloudinary - Almacenamiento de imágenes
CLOUDINARY_NOMBRE_NUBE=tu_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=tu_api_secret_aqui

# Servidor
PUERTO=3000
ENTORNO=desarrollo
NODE_ENV=development

# URLs del Frontend (para CORS y emails)
URL_FRONTEND=http://localhost:8100

# SendGrid - Servicio de correos
SENDGRID_API_KEY=SG.tu_api_key_aqui
EMAIL_FROM=tu_email_verificado@gmail.com

# Configuración de comisiones
COMISION_NORMAL=12
COMISION_EMERGENCIA=20
PORCENTAJE_GARANTIA=3
